<body>
<!-- Header -->
<%= image_tag("/image/header.png" , :class => "bevel" , :size => "1980x140" ) %>

<!-- Top Bar -->
<div class="contain to grid  ">
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
           <% if user_signed_in? %>
        <h1><a><%= link_to current_user.email %></a></h1>
           <% else %>
              <%= link_to "Obavezno prijavljivanje na portal", new_user_registration_path %>
           <% end %>
         </li>
        <li class="toggle-topbar menu-icon"><a href="http://localhost:3000">Menu</a></li>
       </ul>

     <!-- Right Nav Section -->
     <section class="top-bar-section">
        <ul class="right">
      <% if user_signed_in? %>

      <li class="divider"></li>
      <li><%= link_to "Početna", products_pocetna_path %></li>

      <li class="divider"></li>
         <li class="has-dropdown"><a href="#">O Fizici</a>
           <ul class="dropdown">
              <li><a><%= link_to "Poznati Naucnici", site_naucnici_path %></a></li>
              <li><a><%= link_to "Zabavna fizika", site_zabava_path %></a></li>
           </ul>
          </li>
      <li class="divider"></li>
        <li class="has-dropdown"><a href="#">Takmičenja</a>
          <ul class="dropdown">
            <li><a><%= link_to "Zadaci sa Takmičenja", products_path %></a></li>
            <li><a><%= link_to "Pripremni Zadaci", zadacis_path %></a></li>

          </ul>
        </li>
      <li class="divider"></li>
      <li><%= link_to "Kontakt", new_kontakt_path %></li>

   <!-- Right padajuci ADMIN -->
       <% if current_user.admin? %>
          <li class="divider"></li>
           <li class="has-dropdown"><a href="#">Administratorski Meni</a>
            <ul class="dropdown">
              <li><%= link_to "Novi Test", new_product_path %></li>
              <li><%= link_to "Novi Pripremni Zadatak", new_zadaci_path %></li>
              <li><%= link_to "Registrovani korisnici", users_path %></li>
              <li><%= link_to "Poruke korisnika", kontakts_path %></li>
              <li><%= link_to 'Izmena podataka u profilu', edit_user_registration_path %></li>
              <li><%= link_to "Pomoć", site_index_path %></li>
              <li><%= link_to "Odjavi se", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        <% else %>
              <!-- Registrovani korisnik -->
             <li class="divider"></li>
              <li class="has-dropdown"><a href="#">Upravljanje Profilom</a>
                <ul class="dropdown">
                  <li><%= link_to 'Izmeni podatke u profilu', edit_user_registration_path %></li>
                  <li><%= link_to "Pomoć", site_index_path %></li>
                  <li><%= link_to "Odjavi se", destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>

       <% end %>
               </ul>   <!-- zavrsetak ul menija -->
    <% else %>
          <li class="divider"></li>
          <li><%= link_to "Prijavi se", new_user_session_path %></li>
          <li class="divider"></li>
          <li><%= link_to "Novi korisnik", new_user_registration_path %></li>
          <li class="divider"></li>
          <li><%= link_to "Kontakt", new_kontakt_path %></li>
          <li><%= link_to "Pomoć", site_index_path %></li>
<% end %>
</section>
</nav>
</div>
<hr/>
<div class="row">
  <div class="large-12 columns">
    <%= yield %>
  </div>
</div>

<!-- Korisnik -->
<hr/>

