  <div class="social"><a href="https://www.facebook.com/"></a>&#62226;</div>
  <div class="social"><a href="https://www.facebook.com/"></a>&#62214;</div>
</div>

<hr/>
<nav class="breadcrumbs">
<% if user_signed_in? %>

      <%= link_to "Odjavi se", destroy_user_session_path, :method => :delete %>
      <%= link_to "Kontakt", new_kontakt_path %>
      <%= link_to "Pomoć", site_index_path %>

<% else %>

       <%= link_to "Prijavi se", new_user_session_path %>
       <%= link_to "Novi Korisnik", new_user_registration_path %>
       <%= link_to "Kontakt", new_kontakt_path %>
       <%= link_to "Pomoć", site_index_path %>

<% end %>
</nav>

